{% extends 'base.html.twig' %}

{% block title %}Welcome to the formation facile.fr !{% endblock %}

{% block body %}

      <section class="py-5 text-center container">
        <div class="row py-lg-5">
          <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Formation Facile</h1>
            <p class="lead text-body-secondary">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
            <p>
              <a href="#" class="btn btn-primary my-2">Voir les formations</a>
              <a href="#" class="btn btn-secondary my-2">En savoir plus</a>
            </p>
          </div>
        </div>
      </section>

      <div class="album py-5 bg-body-tertiary">
        <div class="container">

          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <!-- <pre>
            {{ dump(tutos) }}
          </pre> -->
          {% for tuto in tutos %}
          <!-- item -->
            <div class="col">
              <div class="card shadow-sm">
                <img src="/uploads/{{ tuto.image }}" class="bd-placeholder-img card-img-top"  style="width: 100%; height: 225px; object-fit: cover;" alt="Vase Image">
                <div class="card-body">
                  <p class="card-text">{{ tuto.name }}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="{{ path('app_tuto_details', { 'slug' : tuto.slug }) }}" class="btn btn-sm btn-outline-secondary">Voir</a>

                      {% if app.user and "ROLE_ADMIN" in app.user.roles %}
                      <button type="button" class="btn btn-sm btn-outline-secondary">Editer</button>
                      {% endif %}
                    </div>
                    <small class="text-body-secondary">#{{ tuto.id }}</small>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
          </div>
        </div>
      </div>

{% endblock %}
